# AWS Credentials and Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_DEFAULT_REGION=your_aws_region_here # e.g., ap-southeast-2

# S3 Bucket Names
S3_IMAGES_BUCKET=your_s3_images_bucket_name_here
S3_THUMBNAILS_BUCKET=your_s3_thumbnails_bucket_name_here # Can be the same as images bucket with a prefix

# Database Configuration (PostgreSQL)
DB_HOST=your_db_host_here # e.g., localhost or RDS endpoint
DB_PORT=5432
DB_NAME=your_db_name_here
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here

# Flask Application Configuration
FLASK_APP=web_app.app
FLASK_ENV=development # or production
FLASK_DEBUG=True # Set to False in production
SECRET_KEY=your_flask_secret_key_here # A strong, random string

# Lambda Function Names (if invoked directly or for configuration)
ANNOTATION_LAMBDA_NAME=your_annotation_lambda_function_name
THUMBNAIL_LAMBDA_NAME=your_thumbnail_lambda_function_name 